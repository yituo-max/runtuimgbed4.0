{
  "version": 2,
  "outputDirectory": ".",
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1.js" },
    { "source": "/img/(.*)", "destination": "/img/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}